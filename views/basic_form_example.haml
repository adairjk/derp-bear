          -#%li
          -#  %label{:for => 'date_of_birth'} Date Time
          -#  %input#date_of_birth{:type => 'datetime', :maxlength => '255', :name => 'date_of_birth'}
          -#%li
          -#  %label{:for => 'date_of_birth'} Date Time Local
          -#  %input#date_of_birth{:type => 'datetime-local', :maxlength => '255', :name => 'date_of_birth'}
          -#%li
          -#  %label{:for => 'month_item'} Month
          -#  %input#month_item{:type => 'month', :name => 'month_item'}
          -#%li
          -#  %label{:for => 'week_item'} Week
          -#  %input#week_item{:type => 'week', :name => 'week_item'}

    %li#sex_information.control-group
      %fieldset
        %legend What is your Sex?
        %ol
          %li.form-group
            .controls
              .control-label

                %label.radio.radio-inline{for: 'male'}
                  %input{type: 'radio', name: 'sex', id: 'male',data: {toggle: 'radio'}}
                    Male
                %label.radio.radio-inline{for: 'female'}
                  %input{type: 'radio', name: 'sex', id: 'female',data: {toggle: 'radio'}}
                    Female

            -#%input#male.radio.radio-inline{type: 'radio', name: 'sex', value: 'male', data: {toggle:"radio"}}
          -#%li.form-group
          -#  %label.selectors{for: 'female'} Female
            -#%input#female.radio{type: 'radio', name: 'sex', value: 'female', data: {toggle:"radio"}}

    %li#transportation_example.control-group
      %fieldset
        %legend How do you get to work?
        %ol
          %li.form-group
            .controls
              .control-label
                %label.checkbox.checkbox-inline.selectors{for: 'bike'}
                  %input#bike.switch.switch-square{type: 'checkbox', name: 'transportation', value: 'bike', data: { on:"primary", off: "info", toggle: 'checkbox'}}
                    Bike
                %label.checkbox.checkbox-inline.selectors{for: 'car'}
                  %input#car.switch.switch-square{type: 'checkbox', name: 'transportation', value: 'car', data: {  toggle: 'checkbox'}}
                    Car
                %label.checkbox.checkbox-inline.selectors{for: 'walk'}
                  %input#walk.switch.switch-square{type: 'checkbox', name: 'transportation', value: 'walk', data: {  toggle: 'checkbox'}}
                    Walk

    %li#password_example.control-group
      %fieldset
        %legend Password Example
        %ol
          %li.form-group
            %label{for: 'password_field'} Example password
            %input#password_field.form-control{type: 'password', name: 'password_field', placeholder: "Enter Password"}

    %li#tos_example.control-group
      %fieldset
        %legend Terms of Agreement
        %ol
          %li.form-group
            %label{for: 'free_text_area'} Free Text Field
            %textarea#free_text_area.form-control{name: 'free_text_area', rows: 4, cols: 40}
          %li.form-group
            %label{for: 'read_only_text_area'} Read only Text Field
            %textarea#read_only_text_area.form-control{name: 'Read_only_text_area', rows: 4, cols: 40, readonly: true} This text is read only!

    %li#hidden_field_example.control-group
      %fieldset
        %ol
          %li.form-group
            %label{for: "hi_im_hidden"} Hidden Field
            %hidden#hi_im_hidden.form-control{name: 'hi_im_hidden', value: 'This element is hidden!'}

    %li#submit_example.control-group
      %fieldset
        %ol
          %li.form-group
            %input#submit_button.btn.btn-default{type: "submit", value: "Submit" }
