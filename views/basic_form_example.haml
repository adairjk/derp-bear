%form#basic_example_form{action: "/forms/basic_elements_example", method: "post", role: 'form'}
  %legend Please Fill in the Form below

  %ul.form-group

    %li#your_information.control-group
      %fieldset
        %legend Your Information
        %ol
          %li.form-group
            %label{for: 'first_name'} First Name
            %input#first_name.form-control{type: 'text', name: 'first_name', placeholder: "First Name", required: true }
          %li.form-group
            %label{for: 'last_name'} Last Name
            %input#last_name.form-control{type: 'text', name: 'last_name', placeholder: "Last Name", required: true}
          %li.form-group
            %label{for: 'email'} Email
            %input#email.form-control{type: 'email', name: 'email', placeholder: "name@example.com", required: true}
          %li.form-group
            %label{for: 'website_url'} Website
            %input#website_url.form-control{type: 'url', name: 'website_url'}
          %li.form-group
            %label{for: 'pet_select'} Select a Pet
            %select#pet_select.btn-md.btn-primary{name: 'pet_select'}
              %option{value: "2"} Cat
              %option{value: "35453453"} Dog
              %option{value: "345345"} Rabbit
              %option{value: "23"} Snake
              %option{value: "3"} Horse

    %li#date_information.control-group
      %fieldset
        %legend Date
        %ol
          %li.form-group
            %label{for: 'date_of_birth'} Date of Birth
            %input#date_of_birth.form-control{type: 'date', maxlength: '255', name: 'date_of_birth'}
